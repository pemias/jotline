    "@sveltejs/vite-plugin-svelte": "latest",
    "@tauri-apps/cli": "^2.9.1",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-plugin-i18next": "^6.1.3",
    "eslint-plugin-svelte": "latest",
    "prettier": "^3.6.2",
    "svelte": "^5",
    "svelte-check": "^4",
    "typescript": "~5.6.3",
    "vite": "^6.4.1"
  }
